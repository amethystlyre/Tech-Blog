<div class='row d-flex mt-3 justify-content-center'>
    <div class='col-10' id="post-list">
        <!-- Existing Posts -->
        {{#each posts as |post|}}
            <div class='d-flex justify-content-between post-list-item p-3 mt-2' data-id="{{post.id}}">
                <h3 class='my-0' data-id="{{post.id}}">{{post.title}}</h3>
                <p>Posted on {{format_date post.date_created}}</p>
            </div>
        {{/each}}
    </div>
</div>

{{> add-post}}
{{> update-post}}


<div class='row d-flex mt-3 justify-content-center'>
    <div class='col-2 text-center'>
        <button
            type='click'
            class='btn btn-primary mt-3 w-100'
            id='new-post-btn'
        >
            + New Post</button>
    </div>
</div>

<script src='./js/dashboard.js'></script>