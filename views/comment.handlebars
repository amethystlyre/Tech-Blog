<div class='row d-flex mt-3 justify-content-center'>
    <div class='col-10'>
        <div class='post'>
            <div class='d-flex justify-content-between post-title p-2'>
                <h3><a href='/post/{{post.id}}'>{{post.title}}</a></h3>
                <p>Posted by  on {{post.date_created}}</p>
            </div>
            <p class='p-2'>{{post.content}}</p>
        </div>
    </div>
</div>

<!-- Add Comments to Existing Blog Posts -->
<div class='comments'>
    <h2>Comments</h2>
    <!-- Add form fields for comments -->
    <!-- Example: -->
    {{#if logged_in}}
        <form>
            <label for='comment'>Comment:</label>
            <textarea id='comment' name='comment'></textarea>
            <button type='submit'>Add Comment</button>
        </form>
    {{/if}}
    <!-- Display existing comments -->
    {{#each comments as |comment| }}
    <div class='comment'>
        <p>{{comment.content}}</p>
        <p>--{{user.name}}, {{comment.date_created}}</p>
    </div>
{{/each}}

</div>