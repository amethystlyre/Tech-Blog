<div class='row d-flex mt-3 justify-content-center'>
    <div class='col-8'>
        <div class='new-post'>
            <!-- Create new Posts -->
            <form class='form new-post-form'>
                <h2 class='post-title p-2'>Create New Post</h2>
                <!-- Add form fields for blog post -->
                <!-- Example: -->
                <div class='p-3'>
                    <label
                        class='form-label'
                        for='new-post-title'
                    >Title:</label>
                    <input
                        class='form-control'
                        type='text'
                        id='new-post-title'
                        name='new-post-title'
                    />
                    <label
                        class='form-label'
                        for='new-post-content'
                    >Content:</label>
                    <textarea
                        class='form-control'
                        id='new-post-content'
                        name='new-post-content'
                    ></textarea>
                    <div class='text-center'>
                        <button
                            class='btn btn-secondary mt-3 w-100'
                            type='submit'
                        >Create</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>